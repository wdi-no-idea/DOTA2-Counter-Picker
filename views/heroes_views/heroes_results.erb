    <h4>Counter 3</h4>
    <p><%= hero.counter3 %></p>
    <img src="<%= hero.counterimageurl3 %>" class="img-responsive" alt="" />
  </article>

  <article class="col-xs-6 col-xs-offset-3 col-sm-2 col-sm-offset-0">
    <h4>Counter 4</h4>
    <p><%= hero.counter4 %></p>
    <img src="<%= hero.counterimageurl4 %>" class="img-responsive" alt="" />
  </article>

  <article class="col-xs-6 col-xs-offset-3 col-sm-2 col-sm-offset-0">
